body{margin:0;padding:0;height:100vh;background-size:cover;background-repeat:no-repeat;background-position:50% 50%;overflow:hidden;font-family:sans-serif}.video{grid-area:video;display:block;max-width:90%}.video-riktig{display:none;grid-area:video-riktig;background-color:darkblue;height:100vh;width:auto;align-content:center;justify-items:center;grid-template:"video" fit-content(100%) "button" fit-content(100%) "video-gratulerer" fit-content(100%) "start-button" fit-content(100%)/1fr}.video-feil{display:none;grid-area:video-feil;background-color:darkblue;height:100vh;width:auto;align-content:center;justify-items:center;grid-template:"video" fit-content(100%) "button" fit-content(100%)/1fr}.video-button{margin:1em;padding:1em;grid-area:button;background-color:peru;color:blue}.video-gratulerer{grid-area:video-gratulerer;margin:1em;padding:1em;grid-area:button;background-color:peru;color:blue}.start-button{display:none;grid-area:start-button;margin:1em;padding:1em;background-color:peru;color:blue}.button{padding:0.5rem 0;margin-top:1rem;display:block;background-color:rgba(255,255,255,0.5);font-weight:700;font-size:larger}.button:hover{background-color:gold}#q1Button{grid-area:q1Button}#q2Button{grid-area:q2Button}#q3Button{grid-area:q3Button}#q4Button{grid-area:q4Button}.questionPage{text-align:center}.questionPage__wrapper{display:grid;grid-template:"video-feil" fit-content(100%) "video-riktig" fit-content(100%) "title" fit-content(100%) "q1Button" fit-content(100%) "q2Button" fit-content(100%) "q3Button" fit-content(100%) "q4Button" fit-content(100%)/1fr}.questionPage__wrapper input{display:none}.title{grid-area:title;display:block}
